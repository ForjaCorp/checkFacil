{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["PORT", "JWT_SECRET"]
    },
    "lint": {
      "outputs": ["!*.json", "!*.js"]
    },
    "format": {},
    "format:check": {}
  }
}
